CREATE USER 'springstudent'@'%' IDENTIFIED BY 'springstudent';

GRANT ALL PRIVILEGES ON student.* TO 'springstudent'@'%';
FLUSH PRIVILEGES;

CREATE TABLE SINHVIEN (
    MaSV INT AUTO_INCREMENT PRIMARY KEY,
    Ngaysinh DATETIME,
    Hoten VARCHAR(255),
    gioitinh VARCHAR(10)
);

